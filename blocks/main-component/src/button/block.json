{
	"apiVersion": 2,
	"name": "aerpn/button",
	"title": "aerpn/button",
	"category": "widgets",
	"icon": "smiley",
	"description": "A custom block with inner blocks.",
	"parent": ["aerpn/main-component"],
	"supports": {
	  "html": false,
	  "color": {
		"text": true,
		"background": true,
		"gradients": true,
		"link": true
	  },
	  "spacing": {
		"margin": true,
		"padding": true
	  },
	  "border": {
		"color": true,
		"style": true,
		"width": true,
		"radius": true
	  }
	},
	"attributes": {
	  "heading": {
		"type": "string"
	  },
	  "useThemeStyle": {
		"type": "boolean",
		"default": true
	  },
	  
	"borderRadius": {
    "type": "number",
    "default": 0
  },
  "FontSize": {
			"type": "number"
		},
		"LetterSpacing": {
			"type": "number",
			"default": 1
		},
		"LineHeight": {
			"type": "number"
		},

		"FontFamily": {
			"type": "string"
		},

		"FontWeight": {
			"type": "string"
		}
	},
	"textdomain": "aerpn",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js"
  }
  